pipeline {
    agent { docker { image 'python:3.8.5' } }
    stages {
        stage('build') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('upgradedb') {
            steps {
                sh 'flask db upgrade'
            }
        stage('test') {
            steps {
                sh 'python -m unittest discover'
            }
             post {
                always {
                junit 'test-reports/*.xml'
                }
            }    
        }
    }
}