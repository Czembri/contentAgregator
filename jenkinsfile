pipeline {
  agent { docker { image 'python:3.8.5' } }
  stages {
    stage('env') {
      steps {
        sh 'python -m venv venv'
        sh 'source venv\bin\activate'
      }
    }
    stage('build') {
      steps {
        sh 'pip install -r requirements.txt'
        sh 'export FLASK_APP=run.py'
        sh  'python -m flask db upgrade'
      }
    }
    stage('test') {
      steps {
        sh 'python -m unittest discover'
      }   
    }
  }
}