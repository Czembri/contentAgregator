pipeline {
  agent { 
    docker { 
      image 'python:3.8.5' 
    }  
  }
  environment {
        FLASK_APP = 'run.py'
    }
  stages {
    stage('user') {
      steps {
        sh 'sudo -u postgres -i'
      }
    }
    stage('build') {
      steps {
        sh 'pip install -r requirements.txt'
        sh  'python -m flask db upgrade'
      }
    }
    stage('test') {
      steps {
        sh 'python -m unittest discover'
      }   
    }
  }
}