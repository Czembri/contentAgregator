pipeline {
  agent any
  environment {
        FLASK_APP = 'run.py'
    }
  stages {
    stage('activate_env') {
      steps {
        sh 'jenkins_scripts/env.sh'
      }
    }
    stage('build') {
      steps {
        sh 'pip install -r requirements.txt'
        sh  'python -m flask db upgrade'
      }
    }
    stage('test') {
      steps {
        sh 'python -m unittest discover'
      }   
    }
  }
}